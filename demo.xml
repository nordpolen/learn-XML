<?xml version="1.0" encoding="UTF-8"?>
<!-- Creating a list of friends -->
<friendsList>
    <friend>
        <name>Alex</name>
    </friend>
    <friend>
        <name>Mary</name>
    </friend>
    <friend>
        <name>Rachel</name>
    </friend>
    <bestFriend> <!-- The friendsList contains different types of friends -->
        <name>Alex</name>
    </bestFriend>
</friendsList>


